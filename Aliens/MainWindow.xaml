<Window x:Class="Aliens.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aliens"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None" ResizeMode="NoResize">

    <Border Width="Auto" Height="Auto" CornerRadius="0,0,40,40"
            >
        <Border.Background>
            <LinearGradientBrush>
                <GradientStopCollection>
                    <GradientStop Color="MintCream" Offset="0.0"></GradientStop>
                    <GradientStop Color="Lavender" Offset="0.5"></GradientStop>
                </GradientStopCollection>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Grid.ColumnSpan="2" MouseDown="Grid_MouseDown" Background="Indigo" ></Grid>


            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>



        </Grid>

    </Border>
</Window>
